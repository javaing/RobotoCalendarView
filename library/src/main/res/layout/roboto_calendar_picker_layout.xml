<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/roboto_calendar_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/roboto_calendar_padding"
    android:paddingRight="@dimen/roboto_calendar_padding">

    <include
        layout="@layout/roboto_calendar_date_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/roboto_calendar_week_days_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/roboto_calendar_padding" />

    <LinearLayout
        android:id="@+id/daysContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <include
            layout="@layout/roboto_calendar_week_1"
            android:id="@+id/layout_week1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/roboto_calendar_week_bottom_padding" />

        <include
            layout="@layout/roboto_calendar_week_2"
            android:id="@+id/layout_week2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/roboto_calendar_week_bottom_padding" />

        <include
            layout="@layout/roboto_calendar_week_3"
            android:id="@+id/layout_week3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/roboto_calendar_week_bottom_padding" />

        <include
            layout="@layout/roboto_calendar_week_4"
            android:id="@+id/layout_week4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/roboto_calendar_week_bottom_padding" />

        <include
            layout="@layout/roboto_calendar_week_5"
            android:id="@+id/layout_week5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/roboto_calendar_week_bottom_padding" />

        <include
            layout="@layout/roboto_calendar_week_6"
            android:id="@+id/layout_week6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
